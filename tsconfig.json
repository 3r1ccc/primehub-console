{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom", "es7"],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  }
}
